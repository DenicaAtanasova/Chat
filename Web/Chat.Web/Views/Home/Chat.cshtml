@{
    ViewData["Title"] = "Chat";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div id="message-holder" class="mt-3 d-flex justify-content-between">
        <h4>Message</h4>
        <input type="text" id="message-input" placeholder="Type a message..." class="w-75 ml-4 pl-3"/>
        <button id="send-button" class="ml-4 btn btn-dark btn-lg">Send</button>
    </div>
    <hr style="height: 5px;" class="bg-dark"/>
    <div id="messages-list" style="font-size: 20px;"></div>
</div>